<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AndradeJamirTallerLayout.Views.FlexPage"
             Title="FlexPage">

    <VerticalStackLayout Padding="20" Spacing="20">

        <FlexLayout Direction="Row" Wrap="Wrap" JustifyContent="Start">
            <Button Text="Eduardo" WidthRequest="100" HeightRequest="50" />
            <Button Text="Jamir" WidthRequest="100" HeightRequest="50" />
            <Button Text="Andrade" WidthRequest="100" HeightRequest="50" />
            <Button Text="Cedeno" WidthRequest="100" HeightRequest="50" />
        </FlexLayout>

        <Button x:Name="IrAAbsolute"
                Text="Ir a Absolute"
                WidthRequest="200"
                HeightRequest="40"
                Style="{StaticResource Boton1}"
                FontSize="15"
                Clicked="IrAAbsolute_Clicked" />

    </VerticalStackLayout>
</ContentPage>
