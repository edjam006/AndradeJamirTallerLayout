<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AndradeJamirTallerLayout.Views.StackPage"
             Title="Vertical StackLayout demo">

    <StackLayout Margin="20"  HorizontalOptions="Center" VerticalOptions="Center" Spacing="150">
        <Label Text="Eduardo Jamir Andrade Cedeno" FontSize="40"/>
        <Label Text="Eduardo Jamir Andrade Cedeno" FontSize="30"/>
        <Label Text="Eduardo Jamir Andrade Cedeno" FontSize="20" />
        <Button x:Name="IrAFlex"
                Text="Flex Page"
                WidthRequest="100"
                HeightRequest="40"
                Style="{StaticResource Boton1}"
                FontSize="15"
                Clicked="IrAFlex_Clicked"
            />
    </StackLayout>
</ContentPage>
